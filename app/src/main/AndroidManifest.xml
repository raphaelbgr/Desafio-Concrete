<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.concrete.android.raphael.desafio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_cs"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_cs"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon">
        <activity android:name=".repositories.RepositoriesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".pullrequests.PullRequestsActivity"
            android:parentActivityName=".repositories.RepositoriesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".repositories.RepositoriesActivity" />
        </activity>
    </application>

</manifest>